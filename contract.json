{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "$id": "https://developer.brickchain.com/schemas/contract.json",
    "title": "Contract",
    "description": "The Contract document is a message displayed to the user when signing a document.",
    "type": "object",
    "allOf": [ { "$ref": "https://developer.brickchain.com/schemas/base.json" } ],
    "properties": {
        "text": {
            "type": "string",
            "description": "A Contract message, displayed for the user for signing"
        },
        "attachments": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                      "type": "string",
                      "description": "The name of the attachment"
                    },
                    "data": {
                      "type": "string",
                      "description": "The attachment data"
                    },
                    "encoding": {
                      "type": "string",
                      "description": "MIME of the attachment"
                    }
                }
            }
        }
    }
}
